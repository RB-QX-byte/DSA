---
export interface Props {
  variant?: 'default' | 'primary' | 'secondary' | 'success' | 'danger' | 'warning' | 'info';
  size?: 'sm' | 'md' | 'lg';
  pill?: boolean;
  class?: string;
  [key: string]: any;
}

const {
  variant = 'default',
  size = 'md',
  pill = false,
  class: className = '',
  ...props
} = Astro.props;

const baseClasses = 'inline-flex items-center font-medium transition-colors duration-200';

const variantClasses = {
  default: 'bg-gray-100 text-gray-800',
  primary: 'bg-blue-100 text-blue-800',
  secondary: 'bg-gray-100 text-gray-600',
  success: 'bg-green-100 text-green-800',
  danger: 'bg-red-100 text-red-800',
  warning: 'bg-yellow-100 text-yellow-800',
  info: 'bg-blue-100 text-blue-800'
};

const sizeClasses = {
  sm: 'px-2 py-0.5 text-xs',
  md: 'px-2.5 py-1 text-sm',
  lg: 'px-3 py-1.5 text-sm'
};

const shapeClasses = pill ? 'rounded-full' : 'rounded';

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${shapeClasses} ${className}`;
---

<span class={classes} {...props}>
  <slot />
</span>

<style>
  /* Custom badge styles for dark theme */
  [data-theme="dark"] .badge-default {
    background-color: rgba(75, 85, 99, 0.3);
    color: rgb(209, 213, 219);
  }
  
  [data-theme="dark"] .badge-primary {
    background-color: rgba(59, 130, 246, 0.2);
    color: rgb(147, 197, 253);
  }
  
  [data-theme="dark"] .badge-success {
    background-color: rgba(34, 197, 94, 0.2);
    color: rgb(134, 239, 172);
  }
  
  [data-theme="dark"] .badge-danger {
    background-color: rgba(239, 68, 68, 0.2);
    color: rgb(252, 165, 165);
  }
  
  [data-theme="dark"] .badge-warning {
    background-color: rgba(251, 191, 36, 0.2);
    color: rgb(253, 230, 138);
  }
  
  [data-theme="dark"] .badge-info {
    background-color: rgba(59, 130, 246, 0.2);
    color: rgb(147, 197, 253);
  }
</style>